{
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰖁 {format_source}",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "rotate": 0,
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "tooltip-format": "{icon} {desc} // {volume}%"
  },

  "pulseaudio#microphone": {
    "format": "{format_source}",
    "rotate": 0,
    "format-source": "\uf86b",
    "format-source-muted": "\uf131",
    "on-click": "pavucontrol-qt -t 4 || pavucontrol -t 4",
    "scroll-step": 1,
    "tooltip-format": "{format_source} {source_desc} // {source_volume}%"
  },

  "bluetooth": {
    "format": " {status}",
    "format-disabled": " {status}",
    "format-off": " {status}",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": ""
  },

  "group/media": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio#microphone", "bluetooth"]
  }
}
